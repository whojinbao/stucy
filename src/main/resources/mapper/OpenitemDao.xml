<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.zf.OpenitemDao">
   <!-- 查询所有项目 -->
   <select id="getOpenitems" resultType="com.entity.Openitem">
		select item_id,item_name,item_intro,user_id,item_money,item_status,starttime,endtime,itemtype_id,itemarea_id from openitem 
	</select>
	<insert id="addOpenitem" useGeneratedKeys="false" parameterType="com.entity.Openitem">
	    insert into openitem(item_id,item_name,item_intro,user_id,item_money,item_status,starttime,endtime,itemtype_id,itemarea_id) 
	    values(stuorder.nextval,#{itemName},#{itemIntro},#{userId},#{itemMoney},#{itemStatus},#{starttime},#{endtime},#{itemtypeId},#{itemareaId})
	</insert>
	<!-- 查询指定项目 -->
	 <select id="queryOpenitem" resultType="com.entity.Openitem" parameterType="String" >
		select item_id,item_name,item_intro,user_id,item_money,item_status,starttime,endtime,itemtype_id,itemarea_id from openitem 
		where item_id = #{itemId}
	</select>
	<!-- 查询指定人的所有项目 -->
	 <select id="queryOpenitems" resultType="com.entity.Openitem" parameterType="String" >
		select item_id,item_name,item_intro,user_id,item_money,item_status,starttime,endtime,itemtype_id,itemarea_id from openitem 
		where user_id = #{userId}
	</select>
</mapper>