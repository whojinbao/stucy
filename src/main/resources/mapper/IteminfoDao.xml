<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.zf.IteminfoDao">  
	<insert id="addIteminfo" useGeneratedKeys="false" parameterType="com.entity.Iteminfo">
	   insert into Iteminfo(item_id,user_id,item_name,itemtype_id,itemarea_id,item_intro,item_content,itemmaterialsurl,item_money,item_status,item_opentime)
	    values(stuorder.nextval,#{userId},#{itemName},#{itemtypeId},#{itemareaid},#{itemIntro},#{itemContent}, #{itemmaterials} ,#{itemMoney},1,sysdate)
	</insert>
	 <select id="queryIteminfo" resultType="com.entity.Iteminfo" parameterType="String" >
		select item_id,user_id,item_name,item_intro,item_content,itemmaterialsurl,item_money,item_status,item_opentime from iteminfo 
		where item_id = #{itemId}
	</select>
	 <select id="getIteminfos" resultType="com.entity.Iteminfo"  >
		select item_id,user_id,item_name,item_intro,item_content,itemmaterialsurl,item_money,item_status,item_opentime from iteminfo 		
	</select>
</mapper>